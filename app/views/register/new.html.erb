<nav>
  <%= link_to 'Вход', login_path %>
</nav>
<%= render 'shared/errors' %>
<%= form_for :player, class: 'user_data_form' do |f| %>

  <div class="input_item">
    <%= label_tag :player_name, 'Имя пользователя' %>
    <%= f.text_field :player_name %>
  </div>
  <div class="input_item">
    <%= label_tag :email, 'Email' %>
    <%= f.email_field :email %>
  </div>
  <div class="input_item">
    <%= label_tag :password, 'Пароль' %>
    <%= f.password_field :password %>
  </div>
  <div class="input_item">
    <%= label_tag :password_confirmation, 'Подтверждение пароля' %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="input_item">
    <%= f.submit 'Зарегистрироваться' %>
  </div>
<% end %>