<nav>
  <%= button_to "Назад", root_path, method: :get%>
</nav>
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
<%= form_for :room, class: 'room_data_form' do |f| %>

  <div class="input_item">
    <%= label_tag :room_tag, 'Идентификатор лобби' %>
    <%= f.text_field :room_tag %>
  </div>
  <div class="input_item">
    <%= f.submit 'Присоединиться' %>
  </div>
<% end %>